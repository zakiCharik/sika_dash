{% extends 'base.html.twig' %}

{% block body %}
    <h1>Operation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ operation.id }}</td>
            </tr>
            <tr>
                <th>Createdtime</th>
                <td>{% if operation.createdTime %}{{ operation.createdTime|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Modifiedtime</th>
                <td>{% if operation.modifiedTime %}{{ operation.modifiedTime|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ operation.value }}</td>
            </tr>
            <tr>
                <th>Clientid</th>
                <td>{{ operation.clientId }}</td>
            </tr>
            <tr>
                <th>Etatvalidation</th>
                <td>{% if operation.etatValidation %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Datevalidation</th>
                <td>{% if operation.dateValidation %}{{ operation.dateValidation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Byvalidation</th>
                <td>{{ operation.byValidation }}</td>
            </tr>
            <tr>
                <th>Fromdevice</th>
                <td>{{ operation.fromDevice }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('operation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('operation_edit', { 'id': operation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
