{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-title">
        <div class="title_left">
            <h3>Opération </h3>
        </div>

    </div>  
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Opération <small>Modification - <a href="{{ path('operation_index') }}">Revenir à la liste</a></small></h2>

                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </li>

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                <i class="fa fa-wrench"></i>
                            </a>
                        </li>
                        <li>
                            <a class="close-link">
                                <i class="fa fa-close"></i>
                            </a>
                        </li>
                    </ul>

                    <div class="clearfix"></div>                    
                </div>        
                <div class="x_content">

                        {{ form_start(edit_form, {'method': 'POST',  'attr' : { 'class': 'form-horizontal form-label-left' } } ) }}

                            <div class="form-group">
                                {{ form_label(edit_form.value ,null, {'label_attr' : { 'class': 'control-label col-md-3 col-sm-3 col-xs-12' } }) }}
                                {{ form_errors(edit_form.value) }}
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    {{ form_widget(edit_form.value, { 'attr': {'class': 'form-control '}} ) }}
                                </div>        
                            </div >

                            <div class="form-group">
                                {{ form_label(edit_form.clientId ,null, {'label_attr' : { 'class': 'control-label col-md-3 col-sm-3 col-xs-12' } }) }}
                                {{ form_errors(edit_form.clientId) }}
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    {{ form_widget(edit_form.clientId, { 'attr': {'class': 'form-control '}} ) }}
                                </div>        
                            </div > 

                            <div class="form-group">
                                {{ form_label(edit_form.fromDevice ,null, {'label_attr' : { 'class': 'control-label col-md-3 col-sm-3 col-xs-12' } }) }}
                                {{ form_errors(edit_form.fromDevice) }}
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    {{ form_widget(edit_form.fromDevice, { 'attr': {'class': 'form-control '}} ) }}
                                </div>        
                            </div > 

                            <div class="form-group">
                                {{ form_label(edit_form.etatValidation ,null, {'label_attr' : { 'class': 'control-label col-md-3 col-sm-3 col-xs-12' } }) }}
                                {{ form_errors(edit_form.etatValidation) }}
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    {{ form_widget(edit_form.etatValidation, { 'attr': {'class': 'form-control '}} ) }}
                                </div>        
                            </div > 

                            <input type="submit" value="Edit" class="btn btn-success" />
                        

                        {{ form_end(edit_form) }}

                        {{ form_start(delete_form) }}
                            <input type="submit" value="Supprimer" class="btn btn-danger" >
                        {{ form_end(delete_form) }}



                </div>        

            </div>        
        </div>

    </div>

{% endblock %}
