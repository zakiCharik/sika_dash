{% extends 'base.html.twig' %}

{% block tiles %}{% endblock %}


{% block body %}
          <div class="">
            <div class="page-title">
              <div class="title_left">
                <h3>Clients <small>Listing </small></h3>
              </div>

              <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                  <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Go!</button>
                    </span>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="clearfix"></div>

            <div class="row">
              <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Compte Clients</h2>
                        <ul class="nav navbar-right panel_toolbox">
                          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                          </li>
                          <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                              <li><a href="#">Settings 1</a>
                              </li>
                              <li><a href="#">Settings 2</a>
                              </li>
                            </ul>
                          </li>
                          <li><a class="close-link"><i class="fa fa-close"></i></a>
                          </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <p>Table des clients avec leur scores éventuel</p>

                        <!-- start project list -->
                        <table class="table table-striped projects">
                            <thead>
                                <tr>
                                  <th style="width: 1%">#</th>
                                  <th style="width: 20%">Client</th>
                                  <th>Tel</th>
                                  <th>Email</th>
                                  <th>Profil</th>
                                  <th>Progression de score</th>
                                  <th>Status</th>
                                  <th style="width: 20%">#Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for client in clients %}

                                    <tr>
                                      <td>{{ client.userId }}</td>
                                      <td>
                                        <a>{{ client.displayName }}</a>
                                        <br />
                                        <small>
                                            {% if client.createdTime %}{{ client.createdTime|date('Y-m-d H:i:s') }}{% endif %}
                                        </small>
                                      </td>
                                      <td>#{{ client.tel }}</td>
                                      <td>{{ client.email }}</td>                                      
                                      <td>
                                        <ul class="list-inline">
                                          <li>
                                            <img src="{{ asset('images/user.png') }}" class="avatar" alt="Avatar">
                                          </li>
                                        </ul>
                                      </td>
                                      <td class="project_progress">
                                        <div class="progress progress_sm">
                                          <div class="progress-bar bg-green" role="progressbar" data-transitiongoal="5{{ client.id }}"></div>
                                        </div>
                                        <small>5{{ client.id }}% Complete</small>
                                      </td>
                                      <td>
                                        <button type="button" class="btn btn-success btn-xs">Activé</button>
                                      </td>
                                      <td>
                                        <a href="{{ path('client_show', { 'id': client.id }) }}" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                                        <a href="{{ path('client_edit', { 'id': client.id }) }}" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                                        <a href="#" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
                                      </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                        <!-- end project list -->

                    </div>
                </div>
              </div>
            </div>
          </div>







    <ul>
        <li>
            <a href="{{ path('client_new') }}">Create a new client</a>
        </li>
    </ul>
{% endblock %}
