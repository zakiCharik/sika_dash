{% extends 'base.html.twig' %}

{% block body %}
    <h1>Gift</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gift.id }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ gift.value }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ gift.name }}</td>
            </tr>
            <tr>
                <th>Qt</th>
                <td>{{ gift.qt }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ gift.logo }}</td>
            </tr>
            <tr>
                <th>Pathlogo</th>
                <td>{{ gift.pathLogo }}</td>
            </tr>
            <tr>
                <th>Createdtime</th>
                <td>{% if gift.createdTime %}{{ gift.createdTime|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Modifiedtime</th>
                <td>{% if gift.modifiedTime %}{{ gift.modifiedTime|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Createdby</th>
                <td>{{ gift.createdBy }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ gift.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('gift_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('gift_edit', { 'id': gift.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
